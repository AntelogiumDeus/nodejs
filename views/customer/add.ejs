<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<h2>Tambah Customer</h2><br>

<form action="/customer/add" method="post" name="form1">
  <div class="form-group ">
        <label>PO Number</label>
        <input class="form-control" type="text" name="customerPo" id="customerPo" value="<%= customerPo %>" />
  </div>
  <div class="form-group ">
        <label>Price</label>
        <input class="form-control" type="text" name="price" id="price" value="<%= price %>" />
  </div>
  <div class="form-group ">
        <label>Deliverables</label>
        <input class="form-control" type="text" name="deliverablesType" id="deliverablesType" value="<%= deliverablesType %>" />
  </div>
  <input type="submit" name="Submit" value="Add" />
</form>

